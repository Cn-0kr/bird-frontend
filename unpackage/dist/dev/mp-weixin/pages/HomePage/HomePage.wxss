
.container.data-v-5ab68f47 {
  min-height: 100vh;
  background-color: hsl(86, 41%, 72%);
  padding-bottom: 50px; /* 为底部tabbar留出空间 */
}
.top-nav.data-v-5ab68f47 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 12px;  /* 增加了内边距，确保元素之间有更好的间距 */
  background-color: hsl(123, 42%, 28%);  /* 改变顶部导航栏的背景色 */
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
  margin-bottom: 8px;  /* 添加底部间距 */
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);  /* 添加底部边框 */
}
.nav-btn.data-v-5ab68f47 {
  display: flex;
  align-items: center;
  gap: 5px;  /* 增加了按钮间距 */
  padding: 4px 4px;
  border-radius: 5px;
  background: linear-gradient(145deg, hsl(84, 45%, 68%), #508c38);
  transition: all 0.3s ease;
  min-width: 40px;  /* 调整按钮宽度，确保按钮不重叠 */
  justify-content: center;
}
.nav-btn.data-v-5ab68f47:active {
  box-shadow: inset 2px 2px 5px rgba(46, 44, 44, 0.1),
              inset -2px -2px 5px rgba(38, 37, 37, 0.8);
  transform: scale(0.98);
}
.ranking-btn.data-v-5ab68f47 {
  border: 1px solid rgba(38, 83, 42, 0.3);
}
.guide-btn.data-v-5ab68f47 {
  border: 1px solid rgba(90, 186, 103, 0.3);
  margin: 0 0.1px 0 20px; 
  width: 55px;         /* 设置固定宽度 */
  height: 20px; 
         /* 设置固定高度 */
}
.btn-icon.data-v-5ab68f47 {
  width: 20px;
  height: 20px;
}
.nav-btn text.data-v-5ab68f47 {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}
.search-container.data-v-5ab68f47 {
  flex: 1;
  max-width: 250px;  /* 增加最大宽度，给搜索框更多空间 */
  margin: 0 18px 0 5px;
}
.search-bar.data-v-5ab68f47 {
  position: relative;
  width: 100%;
  height: 32px;
  background: white;
  border-radius: 5px;
  box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.05),
              inset -2px -2px 5px rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  padding: 0 16px;
  border: 0.5px solid rgba(0, 0, 0, 0.08);
}
.search-icon.data-v-5ab68f47 {
  width: 18px;
  height: 18px;
  margin-right: 6px;
  opacity: 0.6;
}
.search-bar input.data-v-5ab68f47 {
  flex: 1;
  height: 100%;
  border: none;
  background: transparent;
  font-size: 14px;
  color: #333;
}
.search-placeholder.data-v-5ab68f47 {
  color: #999;
  font-size: 14px;
}
.content.data-v-5ab68f47 {
  padding: 12px;
  background-color: #fcfcfc;  /* 确保内容区域保持原来的背景色 */
}
.waterfall.data-v-5ab68f47 {
  display: flex;
  justify-content: space-between;
}
.column.data-v-5ab68f47 {
  width: 48%; /* 留出间距 */
}
.guide-text.data-v-5ab68f47 {
  font-weight: 900;
}
