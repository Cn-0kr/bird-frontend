
.poster-item.data-v-2db382c6 {
  position: relative;
  margin-bottom: 12px;
  border-radius: 12px;
  overflow: hidden;
  background: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}
.poster-item.data-v-2db382c6:active {
  transform: scale(0.98);
}
.poster-image.data-v-2db382c6 {
  width: 100%;
  display: block;
  background-color: #f5f5f5;
  transition: all 0.3s ease;
}
.poster-image.data-v-2db382c6:hover {
  transform: scale(1.02);
}

/* 加载状态 */
.image-loading.data-v-2db382c6 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}
.loading-spinner.data-v-2db382c6 {
  width: 24px;
  height: 24px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #2EA3B7;
  border-radius: 50%;
  animation: spin-2db382c6 1s linear infinite;
}
@keyframes spin-2db382c6 {
0% { transform: rotate(0deg);
}
100% { transform: rotate(360deg);
}
}

/* 信息覆盖层 */
.poster-info.data-v-2db382c6 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: white;
  padding: 16px 12px 12px;
  transition: all 0.3s ease;
}
.poster-item:hover .poster-info.data-v-2db382c6 {
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 20px 12px 16px;
}
.poster-description.data-v-2db382c6 {
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.poster-stats.data-v-2db382c6 {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8px;
